<div class="row">
  <div class="col-md-6">
    <h1>Login</h1>

    <form class="form login-form">
      <div class="form-group mb-0 mt-4 h4">
        <label for="email-login">Email:</label>
      </div>
      <div>
        <input class="form-input mb-2" type="text" id="email-login" />
      </div>
      <div class="form-group mb-0 mt-2 h4">
        <label for="password-login">Password:</label>
      </div>
      <div>
        <input class="form-input mb-2" type="password" id="password-login" />
      </div>
      <div class="form-group mt-4 h4">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h1>Signup</h1>

    <form class="form signup-form">
      <div class="form-group mb-0 mt-4 h4">
        <label for="name-signup">Name:</label>
      </div>
      <div>
        <input class="form-input mb-2" type="text" id="name-signup" />
      </div>
      <div class="form-group mb-0 mt-2 h4">
        <label for="email-signup">Email:</label>
      </div>
      <div>
        <input class="form-input mb-2" type="text" id="email-signup" />
      </div>
      <div class="form-group mb-0 mt-2 h4">
        <label for="password-signup">Password:</label>
      </div>
      <div>
        <input class="form-input mb-2" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary mt-4 h4" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/login.js"></script>